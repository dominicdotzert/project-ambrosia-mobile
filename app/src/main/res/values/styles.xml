<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightOrange</item>
        <item name="colorPrimaryDark">@color/darkOrange</item>
        <item name="colorAccent">@color/salmon</item>
    </style>

    <style name="TextAppearance.Heading" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/darkOrange</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppNameHeading" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/la_belle_aurore</item>
        <item name="fontFamily">@font/la_belle_aurore</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.BodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="TextAppearance.ErrorText" parent="TextAppearance.BodyText">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="TextAppearance.LargeBodyText" parent="TextAppearance.BodyText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.CreditText" parent="TextAppearance.BodyText">
        <item name="android:textColor">@color/greyTextColor</item>
    </style>

    <style name="TextAppearance.PageHeader" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.MinorHeader" parent="TextAppearance.BodyText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.EntryHeader" parent="TextAppearance.MinorHeader">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.HelpHeader" parent="TextAppearance.LargeBodyText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.ItalicBodyText" parent="TextAppearance.BodyText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AmbrosiaButton">
        <item name="android:background">@drawable/ambrosia_button</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AmbrosiaDialogPrimaryButton" parent="AmbrosiaButton">
        <item name="android:background">@drawable/ambrosia_dialog_primary_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AmbrosiaDialogSecondaryButton" parent="AmbrosiaDialogPrimaryButton">
        <item name="android:background">@drawable/ambrosia_dialog_secondary_button</item>
        <item name="android:textColor">@color/salmon</item>
    </style>

    <style name="AmbrosiaEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">@dimen/spacing_regular</item>
        <item name="android:paddingEnd">@dimen/spacing_regular</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/ambrosia_edit_text</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AmbrosiaProgressBar" parent="@android:style/Widget.Material.ProgressBar.Horizontal">
        <item name="android:scaleY">0.6</item>
        <item name="android:progressDrawable">@drawable/progress_bar_rounded_corners</item>
    </style>

    <style name="AmbrosiaAgeGroupRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:background">@drawable/ambrosia_age_group_radio_button</item>
        <item name="android:foreground">@drawable/ambrosia_age_group_radio_button_ripple</item>
        <item name="android:textColor">@color/ambrosia_radio_button_age_group_text</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AmbrosiaGoalRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:padding">@dimen/spacing_regular</item>
        <item name="android:background">@drawable/ambrosia_goal_radio_button</item>
        <item name="android:foreground">@drawable/ambrosia_goal_radio_button_ripple</item>
        <item name="android:textColor">@color/ambrosia_radio_button_goal_text</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>
</resources>
